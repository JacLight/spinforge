# SpinForge Environment Configuration
# Copy this file to .env and update the values as needed

# Domain Configuration
DOMAIN=your-domain.com
API_DOMAIN=api.your-domain.com
MCP_DOMAIN=mcp.your-domain.com

# Security
JWT_SECRET=your-secure-jwt-secret-here
REDIS_PASSWORD=your-redis-password-here

# Redis/KeyDB Configuration
REDIS_HOST=keydb
REDIS_PORT=16378

# API Configuration
API_URL=http://api:8080
SPINFORGE_API_URL=http://api:8080/api

# Admin UI Configuration
VITE_API_URL=http://localhost:8080

# SSL Configuration
SSL_CERT_EMAIL=admin@your-domain.com

# Docker Network
DOCKER_NETWORK=spinforge

# Customer API Settings
CUSTOMER_INTERNAL_URL=http://api:8080
CUSTOMER_EXTERNAL_URL=https://api.your-domain.com

# Monitoring
METRICS_ENABLED=true

# Development Settings (change for production)
NODE_ENV=development
DEBUG=false
# Staging Environment Configuration
NODE_ENV=staging

# Service URLs
SPINFORGE_API_URL=https://staging-api.spinforge.dev
SPINFORGE_WEB_URL=https://staging.spinforge.dev
SPINFORGE_AUTH_URL=https://staging-auth.spinforge.dev
SPINHUB_URL=https://staging-api.spinforge.dev

# Redis Configuration
REDIS_HOST=${REDIS_HOST}
REDIS_PORT=${REDIS_PORT:-16378}
REDIS_PASSWORD=${REDIS_PASSWORD}
REDIS_DB=${REDIS_DB:-1}

# Database Configuration
DATABASE_URL=${DATABASE_URL}

# Authentication
AUTH_SECRET=${AUTH_SECRET}
JWT_SECRET=${JWT_SECRET}

# Deployment Configuration
SPINFORGE_DEPLOYMENTS=/spinforge/deployments
SPINLET_STARTUP_TIMEOUT_MS=300000
IDLE_TIMEOUT_MS=600000

# Ports
PORT_RANGE_START=10000
PORT_RANGE_END=30000

# Logging
LOG_LEVEL=debug
LOG_FORMAT=json

# Docker Registry
DOCKER_REGISTRY=${DOCKER_REGISTRY}

# Feature Flags
ENABLE_HOT_RELOAD=true
ENABLE_METRICS=true
ENABLE_TELEMETRY=true

# CLI Configuration
CLI_AUTH_CALLBACK_PORT=9876
CLI_AUTH_TIMEOUT=300000

# Security
CORS_ORIGIN=https://staging.spinforge.dev,https://staging-app.spinforge.dev
RATE_LIMIT_WINDOW=900000
RATE_LIMIT_MAX=200
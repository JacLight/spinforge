# SpinHub Environment Variables

# Server Configuration
PORT=9006
HOST=0.0.0.0
NODE_ENV=production

# Redis Configuration
REDIS_HOST=localhost
REDIS_PORT=16378
REDIS_PASSWORD=spinforge123

# Upload Size Limits
# Default is 50mb, increase for larger deployments
MAX_REQUEST_SIZE=100mb

# Admin Configuration
ADMIN_USERNAME=admin
ADMIN_PASSWORD=changeme
ADMIN_TOKEN_SECRET=your-secret-here
ADMIN_SESSION_TIMEOUT=86400

# Resource Limits
PORT_START=30000
PORT_END=40000
DEFAULT_MEMORY_LIMIT=512MB
DEFAULT_CPU_LIMIT=0.5

# Timeouts
SPINLET_STARTUP_TIMEOUT_MS=300000
IDLE_TIMEOUT_MS=300000
REQUEST_TIMEOUT=120000
KEEP_ALIVE_TIMEOUT=65000

# Rate Limiting
RATE_LIMIT_GLOBAL=10000
RATE_LIMIT_CUSTOMER=1000

# Logging
LOG_LEVEL=info

# Deployment Configuration
DEPLOYMENT_PATH=/tmp/deployments
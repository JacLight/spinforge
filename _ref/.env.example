# SpinForge Environment Configuration
# Copy this file to .env and update with your values

# Security
REDIS_PASSWORD=changeThisStrongPassword123
ADMIN_TOKEN=changeThisAdminToken456
GRAFANA_PASSWORD=changeThisGrafanaPassword

# Service Configuration
NODE_ENV=production
LOG_LEVEL=info

# Rate Limiting
RATE_LIMIT_GLOBAL=10000
RATE_LIMIT_CUSTOMER=1000

# Resource Limits
DEFAULT_MEMORY_LIMIT=512MB
DEFAULT_CPU_LIMIT=0.5

# Build & Deployment Configuration
SPINLET_STARTUP_TIMEOUT_MS=300000  # 5 minutes (default), increase for slow builds
IDLE_TIMEOUT_MS=300000             # 5 minutes before idle shutdown

# Backup Configuration
BACKUP_RETENTION_DAYS=7

# SSL Configuration (optional)
DOMAIN=spinforge.example.com
EMAIL=admin@example.com

# External Services (optional)
S3_BUCKET=
AWS_ACCESS_KEY_ID=
AWS_SECRET_ACCESS_KEY=
SLACK_WEBHOOK=
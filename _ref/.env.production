# Production Environment Configuration
NODE_ENV=production

# Service URLs
SPINFORGE_API_URL=https://api.spinforge.dev
SPINFORGE_WEB_URL=https://spinforge.dev
SPINFORGE_AUTH_URL=https://auth.spinforge.dev
SPINHUB_URL=https://api.spinforge.dev

# Redis Configuration
REDIS_HOST=${REDIS_HOST}
REDIS_PORT=${REDIS_PORT:-16378}
REDIS_PASSWORD=${REDIS_PASSWORD}
REDIS_DB=${REDIS_DB:-0}

# Database Configuration
DATABASE_URL=${DATABASE_URL}

# Authentication
AUTH_SECRET=${AUTH_SECRET}
JWT_SECRET=${JWT_SECRET}

# Deployment Configuration
SPINFORGE_DEPLOYMENTS=/spinforge/deployments
SPINLET_STARTUP_TIMEOUT_MS=600000
IDLE_TIMEOUT_MS=1800000

# Ports
PORT_RANGE_START=10000
PORT_RANGE_END=50000

# Logging
LOG_LEVEL=info
LOG_FORMAT=json

# Docker Registry
DOCKER_REGISTRY=${DOCKER_REGISTRY}

# Feature Flags
ENABLE_HOT_RELOAD=false
ENABLE_METRICS=true
ENABLE_TELEMETRY=true

# CLI Configuration
CLI_AUTH_CALLBACK_PORT=9876
CLI_AUTH_TIMEOUT=300000

# Security
CORS_ORIGIN=https://spinforge.dev,https://app.spinforge.dev
RATE_LIMIT_WINDOW=900000
RATE_LIMIT_MAX=100
# Development Environment Configuration
NODE_ENV=development

# Service URLs
SPINFORGE_API_URL=http://localhost:9006
SPINFORGE_WEB_URL=http://localhost:9010
SPINFORGE_AUTH_URL=http://localhost:3000
SPINHUB_URL=http://localhost:9006

# Redis Configuration
REDIS_HOST=localhost
REDIS_PORT=16378
REDIS_DB=0

# Database Configuration (if using external DB)
DATABASE_URL=postgres://localhost:5432/spinforge_dev

# Authentication
AUTH_SECRET=dev-secret-key-change-in-production
JWT_SECRET=dev-jwt-secret-change-in-production

# Deployment Configuration
SPINFORGE_DEPLOYMENTS=/Users/imzee/.spinforge/deployments
SPINLET_STARTUP_TIMEOUT_MS=300000
IDLE_TIMEOUT_MS=300000

# Ports
PORT_RANGE_START=10000
PORT_RANGE_END=20000

# Logging
LOG_LEVEL=debug
LOG_FORMAT=pretty

# Docker Registry (for production deployments)
DOCKER_REGISTRY=localhost:5000

# Feature Flags
ENABLE_HOT_RELOAD=true
ENABLE_METRICS=true
ENABLE_TELEMETRY=false

# CLI Configuration
CLI_AUTH_CALLBACK_PORT=9876
CLI_AUTH_TIMEOUT=300000